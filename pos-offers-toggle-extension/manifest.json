{
  "manifest_version": 3,
  "name": "ðŸŽ¯ Qamarero POS Offers Toggle",
  "version": "2.0.0",
  "description": "Activar/desactivar ofertas en Qamarero POS via API directa",
  "permissions": ["storage", "cookies", "tabs"],
  "host_permissions": [
    "https://qamarero.stellate.sh/*",
    "https://pos.qamarero.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://pos.qamarero.com/*"],
      "js": ["injector.js"],
      "run_at": "document_start",
      "world": "ISOLATED"
    },
    {
      "matches": ["https://pos.qamarero.com/*"],
      "js": ["intercept.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ]
}
