{
  "manifest_version": 3,
  "name": "ðŸŽ¯ Qamarero POS Offers Toggle",
  "version": "1.1.0",
  "description": "GuÃ­a paso a paso para activar/desactivar ofertas en Qamarero POS",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://pos.qamarero.com/*"],
      "js": ["injector.js"],
      "run_at": "document_start",
      "world": "ISOLATED"
    },
    {
      "matches": ["https://pos.qamarero.com/*"],
      "js": ["intercept.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://pos.qamarero.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
